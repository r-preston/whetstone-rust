{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
          //"RUST_LOG": "debug"
        }
    },
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "/usr/bin/cargo", // note: full path to the cargo
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cargo run",
            "type": "shell",
            "command": "/usr/bin/cargo", // note: full path to the cargo
            "args": [
                "run"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
