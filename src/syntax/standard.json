{
    "Operators": {
        "may_follow": ["Literals", "Variables"],
        "rules": [
            {
                "pattern": "\\+",
                "binding": "Add",
                "precedence": 1
            },
            {
                "pattern": "-",
                "binding": "Subtract",
                "precedence": 1
            },
            {
                "pattern": "\\*",
                "binding": "Multiply",
                "precedence": 2
            },
            {
                "pattern": "/",
                "binding": "Divide",
                "precedence": 2
            },
            {
                "pattern": "\\^",
                "binding": "Exponent",
                "precedence": 3,
                "associativity": "RightToLeft"
            }
        ]
    },
    "ImplicitOperators": {
        "may_follow": ["Literals", "Variables"],
        "rules": [
            {
                "binding": "Multiply",
                "precedence": 2
            }
        ]
    },
    "Literals": {
        "may_follow": ["Operators"],
        "rules": [
            {
                "pattern": "-?[0-9]+(?:\\.[0-9]+)?"
            }
        ]
    },
    "Variables": {
        "may_follow": ["Operators", "ImplicitOperators"],
        "rules": [
            {
                "pattern": "[xyz]"
            }
        ]
    }
}
