{
    "Operators": {
        "may_follow": ["Literals", "Variables"],
        "rules": [
            {
                "pattern": "\\+",
                "label": "Add",
                "precedence": 1
            },
            {
                "pattern": "-",
                "label": "Subtract",
                "precedence": 1
            },
            {
                "pattern": "\\*",
                "label": "Multiply",
                "precedence": 2
            },
            {
                "pattern": "",
                "label": "Multiply",
                "may_follow": ["Literals", "Operators"],
                "precedence": 2
            },
            {
                "pattern": "/",
                "label": "Divide",
                "precedence": 2
            },
            {
                "pattern": "\\^",
                "label": "Exponent",
                "precedence": 3,
                "associativity": "RightToLeft"
            }
        ]
    },
    "Literals": {
        "may_follow": ["Operators"],
        "rules": [
            {
                "pattern": "-?[0-9]+(?:\\.[0-9]+)?"
            }
        ]
    },
    "Variables": {
        "may_follow": ["Operators", "Literals"],
        "rules": [
            {
                "pattern": "[xyz]"
            }
        ]
    }
}
